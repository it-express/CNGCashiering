@model CNGCashier.Models.User

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel-heading">
    <h4 class="panel-title">Delete User</h4>
    <hr />
</div>

<div class="panel-body">
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.Id);
        <div class="form-group">
            <label class="control-label col-md-2">Gen. Manager Username</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.GeneralManager.Username)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">User Description</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.UserType.Description)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Gen. Manager Username</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.GeneralManager.Username)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Username</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.Username)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Password</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.Password)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Firstname</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.FirstName)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Lastname</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.LastName)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">User Level</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.UserLevel)
                </label>
            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-dark-red" /> &nbsp;&nbsp;
            <a href='@Url.Action("Index")' class="btn btn-light-orange">Back to List</a>
        </div>
        }
    </div>

</div>