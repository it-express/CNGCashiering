@model PagedList.IPagedList<CNGCashier.Models.Vehicle>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" />
@{
    ViewBag.Title = "Vehicles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- start: TOOLBAR -->
<div class="toolbar row">
    <div class="col-sm-6 hidden-xs">
        <div class="page-header">
            <h1>Vehicle Management</h1>
        </div>
    </div>
</div>
<!-- end: TOOLBAR -->
<!-- end: PAGE HEADER -->
<!-- start: BREADCRUMB -->
<div class="row">
    <div class="col-md-12">
        <div class="breadcrumb"></div>
    </div>
</div>
<!-- end: BREADCRUMB -->
<!-- start: PAGE CONTENT -->
<div class="row">
    <div class="col-md-12">
        <!-- start: BASIC TABLE PANEL -->
        <div class="panel panel-white">
            <div class="panel-heading">
                <h4 class="panel-title pull-left"><span class="text-bold">Vehicle List</span></h4>
                <div class="pull-right">
                    <a href="@Url.Action("Create")" class="btn btn-dark-blue">Create</a>

                    @*<a href="@Url.Action("Assignment")" class="btn btn-blue">Vehicle Assignment</a>*@
                </div>

                <div class="clearfix"></div>

            </div>
            <div class="panel-body">


                @using (Html.BeginForm())
                {
                    <div class="col-md-4 col-sm-12 no-padding pull-right" style="margin-bottom:16px; text-align:right;">
                        @Html.TextBox("SearchString", (string)ViewBag.CurrentFilter, new { @class = "form-control", @placeholder = "Search", @style = "display:inline; width:74%;" })
                        <input type="submit" value="Search" class="btn btn-dark-beige" />
                    </div>
                }


                <div class="clearfix"></div>

                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>
                                @*@Html.DisplayNameFor(model => model.Make)*@
                                @Html.ActionLink("Make", "Index", new { sortOrder = ViewBag.MakeSortParm, currentFilter = ViewBag.CurrentFilter })

                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.Year)*@
                                @Html.ActionLink("Year", "Index", new { sortOrder = ViewBag.YearSortParm, currentFilter = ViewBag.CurrentFilter })
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.Model)*@
                                @Html.ActionLink("Model", "Index", new { sortOrder = ViewBag.ModelSortParm, currentFilter = ViewBag.CurrentFilter })
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.CnNo)*@
                                @Html.ActionLink("Cn No", "Index", new { sortOrder = ViewBag.CnNoSortParm, currentFilter = ViewBag.CurrentFilter })
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.LicenseNo)*@
                                @Html.ActionLink("License", "Index", new { sortOrder = ViewBag.LicenseSortParm, currentFilter = ViewBag.CurrentFilter })
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.EngineNo)*@
                                @Html.ActionLink("Engine No", "Index", new { sortOrder = ViewBag.EngineNoSortParm, currentFilter = ViewBag.CurrentFilter })
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.ChasisNo)*@
                                @Html.ActionLink("Chasis No", "Index", new { sortOrder = ViewBag.ChasisNoSortParm, currentFilter = ViewBag.CurrentFilter })
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.Color)*@
                                @Html.ActionLink("Color", "Index", new { sortOrder = ViewBag.ColorSortParm, currentFilter = ViewBag.CurrentFilter })
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.Active)*@
                                @Html.ActionLink("Active", "Index", new { sortOrder = ViewBag.ActiveSortParm, currentFilter = ViewBag.CurrentFilter })
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Make)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Model)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CnNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LicenseNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EngineNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ChasisNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Color)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Active)
                        </td>
                        <td>
                            <div class="visible-md visible-lg hidden-sm hidden-xs">
                                <a href="@Url.Action("Edit", new { id = item.Id })" data-original-title="Edit" data-placement="top" class="btn btn-xs btn-blue tooltips"><i class="fa fa-edit"></i></a>
                                <a href="@Url.Action("Delete", new { id = item.Id })" data-original-title="Remove" data-placement="top" class="btn btn-xs btn-red tooltips"><i class="fa fa-times fa fa-white"></i></a>
                            </div>
                        </td>
                    </tr>
}
                    </tbody>
                </table>


                <div class="clearfix"></div>

                <div class="col-md-4 col-sm-12 no-padding pull-left" style="margin:20px 0px;">
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                </div>

                <div class="col-md-8 col-sm-12 no-padding pull-left" style="text-align:right;">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, nextpage = "next", sortColumn = ViewBag.CurrentSort, sortOrder = ViewBag.SortOrder, currentFilter = ViewBag.CurrentFilter }))
                </div>

                <div class="clearfix"></div>

            </div>
        </div>
        <!-- end: BASIC TABLE PANEL -->
    </div>

    <div class="clearfix"></div>

</div>
<script>

    $(document).ready(function () {
        $('ul.main-navigation-menu > li:nth-child(8)').addClass('active open');

        $('ul.main-navigation-menu > li:nth-child(8) ul.sub-menu> li:nth-child(2)').addClass('active');
    });

</script>