@model CNGCashier.Models.Vehicle

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel-heading">
    <h4 class="panel-title">Delete Vehicle</h4>
    <hr />
</div>
<div class="panel-body">
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.Id);
        <div class="form-group">
            <label class="control-label col-md-2">Make</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.Make)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Year</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.Year)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Model</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.Model)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Cn. No.</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.CnNo)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">License Number</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.LicenseNo)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Engine Number</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.EngineNo)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Chasis Number</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.ChasisNo)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Color</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.Color)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Active</label>
            <div class="col-md-6">
                <label class="custom-label">
                    @Html.DisplayFor(model => model.Active)
                </label>
            </div>
        </div>
    </div>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-dark-red" /> &nbsp;&nbsp;
        <a href='@Url.Action("Index")' class="btn btn-light-orange">Back to List</a>
    </div>
    }
</div>
