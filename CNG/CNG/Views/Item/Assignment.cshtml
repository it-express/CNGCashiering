@model List<CNG.Models.ItemAssignmentVM>

@{
    ViewBag.Title = "Assignment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- start: TOOLBAR -->
<div class="toolbar row">
    <div class="col-sm-6 hidden-xs">
        <div class="page-header">
            <h1>Item Assignment</h1>
        </div>
    </div>
</div>
<!-- end: TOOLBAR -->
<!-- end: PAGE HEADER -->
<!-- start: BREADCRUMB -->
<div class="row">
    <div class="col-md-12">
        <div class="breadcrumb"></div>
    </div>
</div>
<!-- end: BREADCRUMB -->
<!-- start: PAGE CONTENT -->
<div class="row">
    <div class="col-md-12">
        <!-- start: BASIC TABLE PANEL -->
        <div class="panel panel-white">

            <div class="panel-body">

                @using (Html.BeginForm("AssignmentSave", "Item"))
                {

                    <div class="row">
                        <div class="col-sm-12">

                            <div class="checkbox">
                                <label class="checkbox-inline">
                                    <input type="checkbox" id="CheckAllItem" value="Check All Item" />
                                    <label>Check All</label>
                                </label>
                            </div>
                        </div>

                        @foreach (var item in Model)
                        {
                            <div class="col-sm-4">

                                <div class="checkbox">
                                    <label>
                                        @if (item.IsAssigned)
                                        {
                                            <input type="checkbox" name="ItemId" value="@item.ItemId" checked="checked" />
                                        }
                                        else
                                        {
                                            <input type="checkbox" name="ItemId" value="@item.ItemId" />
                                        }

                                        @*@:&nbsp;*@

                                        @Html.LabelFor(model => item.Item.Description, item.Item.Description)
                                    </label>
                                </div>
                            </div>
                        }

                        <div class="clearfix"></div>

                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-dark-blue">
                                Save
                            </button>
                        </div>

                    </div>
                }

            </div>
            <!-- end: BASIC TABLE PANEL -->
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {
        $('ul.main-navigation-menu > li:nth-child(8)').addClass('active open');

        $('ul.main-navigation-menu > li:nth-child(8) ul.sub-menu> li:nth-child(1)').addClass('active');


        $("#CheckAllItem").change(function () {
            $("input:checkbox").prop('checked', $(this).prop("checked"));
        });
    });

</script>