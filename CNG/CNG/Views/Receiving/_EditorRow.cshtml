@model IEnumerable<CNG.Models.PurchaseOrderItem>

@foreach (var poItem in Model)
{
    <tr class='item-row' data-poitem-id="@poItem.Id" data-po-quantity="@poItem.Quantity">
        <td>
            @poItem.Item.Code
        </td>
        <td class="lblQuantity">
            @poItem.Quantity
        </td>
        <td>
            @poItem.Item.UnitCost.ToString("#,##0.00")
        </td>
        <td>
            @poItem.Item.Description
        </td>
        <td>
            @poItem.Amount.ToString("#,##0.00")
        </td>
        <td>
            @poItem.ReceivedQuantity
        </td>
        <td class='lblBalance'>
            @poItem.Balance
        </td>
        <td>
            @poItem.VendorName
        </td>
        <td>
            @poItem.Date
        </td>
        <td>
            <a data-po-item-id="@poItem.Id" data-original-title="Edit" data-placement="top" class="btn btn-xs btn-blue tooltips btnEdit"><i class="fa fa-edit"></i></a>
            @*<input type="button" class="btnEdit" value="Edit" data-po-item-id="@poItem.Id" />*@
        </td>
    </tr>    
}
