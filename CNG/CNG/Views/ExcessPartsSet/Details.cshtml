@model CNG.Models.ExcessPartsSet

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>ExcessPartsSet</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.No)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.No)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PreparedBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PreparedBy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ApprovedBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApprovedBy)
        </dd>

    </dl>

    <div class="form-group">
        <label class="col-md-1"></label>
        <div class="col-md-9">
            <table class="table table-hover table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            Item Code
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Brand
                        </th>
                        <th>
                            Unit Cost
                        </th>
                        <th>
                            Item Type
                        </th>
                        <th>
                            Remarks
                        </th>
                        <th>
                            Quantity
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rpItem in Model.ExcessPartsSetItems)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => rpItem.Item.Code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => rpItem.Item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => rpItem.Item.Brand)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => rpItem.UnitCost)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => rpItem.Item.Type.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => rpItem.Remarks)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => rpItem.Quantity)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
