
@{
    ViewBag.Title = "RequisitionSummaryReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using ReportViewerForMvc

<!-- start: TOOLBAR -->
<div class="toolbar row">
    <div class="col-sm-6 hidden-xs">
        <div class="page-header">
            <h1>Company to Company <small>Stock Transfer Summary Report</small></h1>
        </div>
    </div>

    <div class="col-sm-6 col-xs-12">
        <div class="toolbar-tools pull-right">
            <!-- start: TOP NAVIGATION MENU -->
            @{ Html.RenderPartial("_StockTransferMenu"); }
        </div>
    </div>
</div>
<!-- end: TOOLBAR -->
<!-- end: PAGE HEADER -->
<!-- start: BREADCRUMB -->
<div class="row">
    <div class="col-md-12">
        <div class="breadcrumb"></div>
    </div>
</div>
<!-- end: BREADCRUMB -->
<!-- start: PAGE CONTENT -->
<div class="row">
    <div class="col-md-12">
        <!-- start: BASIC TABLE PANEL -->
        <div class="panel panel-white">
            @*<div class="panel-heading">
                    <h4 class="panel-title pull-left"><span class="text-bold">Inventory Report - @ViewBag.CompanyName</span></h4>
                    <div class="clearfix"></div>
                </div>*@
            <div class="panel-body">


                <h4>Requisition Summary Report - @ViewBag.CompanyName</h4>
                <hr>

                <div class="row ToolHolder">
                    @using (Html.BeginForm())
                    {
                        <label class="col-sm-1">Date From</label>
                        <div class="col-sm-2 no-padding">
                            <input type="text" name="DateFrom" class="date-picker form-control" value="@ViewBag.DateFrom" />
                        </div>

                        <label class="col-sm-1">Date To</label>
                        <div class="col-sm-2 no-padding">
                            <input type="text" name="DateTo" class="date-picker form-control" value="@ViewBag.DateTo" />
                        </div>

                        <label class="col-sm-1">Company</label>
                        <div class="col-sm-3">
                            @Html.DropDownList("CompanyTo", (IEnumerable<SelectListItem>)ViewBag.Companies, "", new { @class = "form-control" })
                        </div>

                        <div class="col-sm-1">
                            <input type="submit" value="Submit" class="btn btn-dark-blue" />
                        </div>
                    }

                </div>


                <!--#ReportViewer1-->
                <div class="report-viewer">
                    @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer, new { @style = "border: none; width:100% !important;" })
                </div>

            </div>
        </div>
        <!-- end: BASIC TABLE PANEL -->
    </div>

    <div class="clearfix"></div>

</div>
<script>

    $(document).ready(function () {
        //$('ul.main-navigation-menu li:nth-child(3)').addClass('active open');

        //$('.toolbar .navbar-right > li:nth-child(2) > a').addClass('active');
        $('ul.main-navigation-menu > li:nth-child(6)').addClass('active open');
        $('ul.main-navigation-menu > li:nth-child(6) ul > li:nth-child(1)').addClass('active');
    });
</script>
