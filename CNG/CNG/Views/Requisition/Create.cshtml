@model CNG.Models.Requisition

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/app/Requisition.js"></script>

<!-- start: TOOLBAR -->
<div class="toolbar row">
    <div class="col-sm-6 hidden-xs">
        <div class="page-header">
            <h1>Requisition </h1>
        </div>
    </div>
</div>
<!-- end: TOOLBAR -->
<!-- end: PAGE HEADER -->
<!-- start: BREADCRUMB -->
<div class="row">
    <div class="col-md-12">
        <div class="breadcrumb"></div>
    </div>
</div>
<!-- end: BREADCRUMB -->
<!-- start: PAGE CONTENT -->
<div class="row">
    <div class="col-md-12">
        <!-- start: BASIC TABLE PANEL -->
        <div class="panel panel-white">

            <div class="panel-body">

                <div class="form-horizontal">
                    <h4>Manage Requsition</h4>
                    <hr />

                    <div class="form-group">
                        <label class="control-label col-md-2">Requisition Number</label>
                        <div class="col-md-5">
                            <label id="lblReqNo" class="form-control">@ViewBag.ReqNumber</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Requisition Date</label>
                        <div class="col-md-5">
                            <input type="text" id="lblReqDate" class="form-control date-picker" value="@Model.Date" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Job Order No</label>
                        <div class="col-md-5">
                            <input type="text" id="txtJobOrderNo" class="form-control" value="@Model.JobOrderNo" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Search unit plate no</label>
                        <div class="col-md-5">
                            @Html.DropDownList("UnitPlateNo", (IEnumerable<SelectListItem>)ViewBag.PlateNos, "", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">JO Date</label>
                        <div class="col-md-5">
                            <input type="text" id="txtJobOrderDate" class="form-control date-picker" value="@Model.JobOrderDate" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Odometer Reading</label>
                        <div class="col-md-5">
                            <input type="text" id="txtOdometerReading" class="form-control" value="@Model.OdometerReading" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Drivers Name</label>
                        <div class="col-md-5">
                            <input type="text" id="txtDriverName" class="form-control" value="@Model.DriverName" />
                        </div>
                    </div>

                    <div class="form-group">
                        <h4 class="control-label col-md-2">Add Items</h4>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Search item</label>
                        <div class="col-md-5">
                            @Html.DropDownList("Items", (IEnumerable<SelectListItem>)ViewBag.Items, "", new { @class = "form-control" })
                        </div>
                        <div class="col-md-1">
                            <input type="button" id="btnAddItem" value="Ok" class="btn btn-dark-blue" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group">
                                <h4 class="control-label col-md-5">
                                    Requested Items
                                </h4>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="form-group">
                                <h4 class="control-label col-md-3">
                                    Return Items
                                </h4>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @*<label class="control-label col-md-1"></label>*@
                        <div class="col-md-12">
                            <table id="tblItems" class="table table-hover table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Item/Part Required</th>
                                        <th>Quantity</th>
                                        <th>Description</th>
                                        <th>Serial No</th>
                                        <th>Item/Part Required</th>
                                        <th>Quantity</th>
                                        <th>Description</th>
                                        <th>Serial No</th>
                                        <th>Type</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var poItem in Model.RequisitionItems)
                                    {
                                        <tr data-item-id="@poItem.ItemId">
                                            <td>
                                                @poItem.Item.Code
                                            </td>
                                            <td>
                                                <input type='text' class='txtQuantity form-control' value="@poItem.Quantity" />
                                            </td>
                                            <td>
                                                @poItem.Item.Description
                                            </td>
                                            <td>
                                                @*@poItem.Item.SerialNo*@
                                            </td>
                                            <td>
                                                @poItem.Item.Code
                                            </td>
                                            <td>
                                                @*Quantity*@
                                            </td>
                                            <td>
                                                @poItem.Item.Description
                                            </td>
                                            <td>
                                                @*@poItem.Item.SerialNo*@
                                            </td>
                                            <td>
                                                @poItem.Item.Type.Description
                                            </td>
                                            
                                            <td>
                                                <a class="btn btn-xs btn-red tooltips btnRemoveItem" href="#!" data-original-title="Remove" data-placement="top">
                                                    <i class="fa fa-times fa fa-white"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Reported/Requested By:</label>
                        <div class="col-md-5">
                            <input type="text" id="txtReportedBy" class="form-control" value="@Model.ReportedBy" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Checked By:</label>
                        <div class="col-md-5">
                            <input type="text" id="txtCheckedBy" class="form-control" value="@Model.CheckedBy" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Approved By:</label>
                        <div class="col-md-5">
                            <label id="lblApprovedBy" class="form-control">@ViewBag.ApprovedBy</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input id="btnSubmit" value="Submit" class="btn btn-dark-blue" type="submit">
                            <a href="@Url.Action("Index")" class="btn btn-dark-beige">
                                Back to List
                            </a>
                        </div>
                    </div>

                </div>

            </div>
        </div>
        <!-- end: BASIC TABLE PANEL -->
    </div>
</div>

<script>

    $(document).ready(function () {
        $('ul.main-navigation-menu > li:nth-child(4)').addClass('active');

    });

</script>