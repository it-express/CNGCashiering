@model CNG.Models.RequisitionPurchase

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>RequisitionPurchase</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.No)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.No)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PreparedBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PreparedBy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ApprovedBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApprovedBy)
        </dd>
    </dl>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                    Item Code
                </th>
                <th>
                    Description
                </th>
                <th>
                    Brand
                </th>
                <th>
                    Unit Cost
                </th>
                <th>
                    Item Type
                </th>
                <th>
                    Remarks
                </th>
                <th>
                    Quantity
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rpItem in Model.RequisitionPurchaseItems)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => rpItem.Item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => rpItem.Item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => rpItem.Item.Brand)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => rpItem.UnitCost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => rpItem.Item.Type.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => rpItem.Remarks)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => rpItem.Quantity)
                    </td>
                </tr>
            }
        </tbody>
    </table>



</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
