@model CNG.Models.PurchaseOrder

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/moment.js"></script>
<script src="~/Scripts/app/Common.js"></script>
<script src="~/Scripts/app/PurchaseOrder.js"></script>
<!-- start: TOOLBAR -->
<div class="toolbar row">
    <div class="col-sm-6 hidden-xs">
        <div class="page-header">
            <h1>Requisition to Purchase </h1>
        </div>
    </div>

    <div class="col-sm-6 col-xs-12">
        <div class="toolbar-tools pull-right">
            <!-- start: TOP NAVIGATION MENU -->
            @{ Html.RenderPartial("_ReceivingMenu"); }
        </div>
    </div>
</div>
<!-- end: TOOLBAR -->
<!-- end: PAGE HEADER -->
<!-- start: BREADCRUMB -->
<div class="row">
    <div class="col-md-12">
        <div class="breadcrumb"></div>
    </div>
</div>
<!-- end: BREADCRUMB -->
<!-- start: PAGE CONTENT -->
<div class="row">
    <div class="col-md-12">
        <!-- start: BASIC TABLE PANEL -->
        <div class="panel panel-white">

            <div class="panel-body">

                <div class="form-horizontal">
                    <h4>Requisition Purchase</h4>
                    <hr />

                    <div class="form-group">
                        <label class="control-label col-md-2">@Html.DisplayNameFor(model => model.No)</label>
                        <div class="col-md-5">
                            <label id="lblPoNumber" class="form-control">@Html.DisplayFor(model => model.No)</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">@Html.DisplayNameFor(model => model.Date)</label>
                        <div class="col-md-5">
                            <label class="form-control">@Html.DisplayFor(model => model.Date)</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">@Html.DisplayNameFor(model => model.PreparedBy)</label>
                        <div class="col-md-5">
                            <label class="form-control">@Html.DisplayFor(model => model.PreparedByObj.FullName)</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Checked By</label>
                        <div class="col-md-3">
                            <label class="form-control">@Html.DisplayFor(model => model.CheckedBy)</label>
                        </div>
                        <div class="col-md-2 no-padding">
                            @if (ViewBag.UserLevel == 1)
                            {
                                @Html.CheckBoxFor(model => model.Checked, new { id = "cb_Checked", @disabled = "disabled" })
                            }
                            else
                            {
                                @Html.CheckBoxFor(model => model.Checked, new { id = "cb_Checked" })
                            }
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">@Html.DisplayNameFor(model => model.ApprovedBy)</label>
                        <div class="col-md-3">
                            <label class="form-control">@Html.DisplayFor(model => model.ApprovedByObj.FullName)</label>
                        </div>
                        <div class="col-md-2 no-padding">
                            @if (ViewBag.UserLevel == 3)
                            {
                                @Html.CheckBoxFor(model => model.Approved, new { id = "cb_Approved" })
                            }
                            else
                            {
                                @Html.CheckBoxFor(model => model.Approved, new { id = "cb_Approved", @disabled = "disabled" })
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-1"></label>
                        <div class="col-md-9 TableHolder">
                            <table class="table table-hover table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Item Code
                                        </th>
                                        <th>
                                            Description
                                        </th>
                                        <th>
                                            Item Type
                                        </th>
                                        <th>
                                            Brand
                                        </th>
                                        <th>
                                            Quantity
                                        </th>
                                        <th>
                                            Unit Cost
                                        </th>
                                        <th>
                                            Total Amount
                                        </th>
                                        <th>
                                            Remarks
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var rpItem in Model.PurchaseOrderItems)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => rpItem.Item.Code)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => rpItem.Item.Description)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => rpItem.Item.Type.Description)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => rpItem.Item.Brand)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => rpItem.Quantity)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => rpItem.GetUnitCost)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => rpItem.GetAmount)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => rpItem.Remarks)
                                            </td>
                                        </tr>
                                    }
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td>@Html.DisplayFor(p => p.TotalAmountItems)</td>
                                        <td></td>

                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <a href="@Url.Action("Index")" class="btn btn-dark-beige">
                                Back to List
                            </a>
                            <a href="@Url.Action("Report", new { ReqPoNo = Model.No })" class="btn btn-dark-blue">
                                Print
                            </a>

                        </div>
                    </div>

                </div>
            </div>

        </div>
        <!-- end: BASIC TABLE PANEL -->
    </div>
</div>

<script>

    $(document).ready(function () {
        $('ul.main-navigation-menu li:nth-child(3)').addClass('active open');

        $('.toolbar .navbar-right > li:nth-child(2) > a').addClass('active');
    });

</script>


